<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
            android:id="@+id/textPengaduan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Total Pengaduan"
            android:textSize="30sp"
            android:textColor="@color/onyx"
            android:fontFamily="@font/roboto"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cvpengaduan"
            android:layout_width="235dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:text="547"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/onyx"
                    android:fontFamily="@font/roboto"/>

            <View
                    android:layout_width="0.2dp"
                    android:layout_height="124dp"
                    android:layout_marginRight="10dp"
                    android:background="#000" />

            <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/textBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="10sp"
                        android:text="114 -> Baru"
                        android:textColor="@color/onyx"
                        android:textSize="12sp" />

                <TextView
                        android:id="@+id/textProses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="10sp"
                        android:text="153 -> Proses"
                        android:textColor="@color/onyx"
                        android:textSize="12sp" />

                <TextView
                        android:id="@+id/textSelesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="10sp"
                        android:text="280 -> Selesai"
                        android:textColor="@color/onyx"
                        android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/textKependudukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Jumlah Penduduk"
            android:textColor="@color/onyx"
            android:textSize="30sp" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cvKependudukan"
            android:layout_width="235dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

        <LinearLayout
                android:layout_width="237dp"
                android:layout_height="112dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textTotalPengaduan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:text="547"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/onyx"
                    android:fontFamily="@font/roboto"/>

            <View
                    android:layout_width="0.2dp"
                    android:layout_height="124dp"
                    android:layout_marginRight="10dp"
                    android:background="#000" />

            <LinearLayout
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/textBaruPengaduan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text="-> 114"
                        android:textSize="12sp"
                        android:textColor="@color/onyx"
                        android:fontFamily="@font/roboto"/>

                <TextView
                        android:id="@+id/textSelesaiPengaduan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text="-> 280"
                        android:textSize="12sp"
                        android:textColor="@color/onyx"
                        android:fontFamily="@font/roboto"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/textPerizinan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Total Perizinan"
            android:textColor="@color/onyx"
            android:textSize="30sp" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cvPerizinan"
            android:layout_width="235dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

        <LinearLayout
                android:layout_width="237dp"
                android:layout_height="112dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textTotalPerizinan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:text="718"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/onyx"
                    android:fontFamily="@font/roboto"/>

            <View
                    android:layout_width="0.2dp"
                    android:layout_height="124dp"
                    android:layout_marginRight="10dp"
                    android:background="#000" />

            <LinearLayout
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/textBaruPerizinan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text="0 -> Baru"
                        android:textSize="12sp"
                        android:textColor="@color/onyx"
                        android:fontFamily="@font/roboto"/>

                <TextView
                        android:id="@+id/textProsesPerizinan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text="0 -> Proses"
                        android:textSize="12sp"
                        android:textColor="@color/onyx"
                        android:fontFamily="@font/roboto"/>

                <TextView
                        android:id="@+id/textSelesaiPerizinan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text="718 -> Selesai"
                        android:textSize="12sp"
                        android:textColor="@color/onyx"
                        android:fontFamily="@font/roboto"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>