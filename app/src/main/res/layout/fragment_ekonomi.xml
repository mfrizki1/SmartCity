<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="id.co.iconpln.smartcity.ui.publicservices.PublicServicesFragment"
        android:orientation="vertical"
        android:background="@drawable/bg_primary">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include layout="@layout/layout_toolbar_white"/>

        <!--MAIN-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_x1_half"
                android:layout_marginLeft="@dimen/space_x2"
                android:layout_marginRight="@dimen/space_x2"
                android:layout_marginBottom="@dimen/space"
                android:layout_below="@+id/toolbar"
                android:orientation="vertical">

            <!--SPINNER-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/daftar_tahun"
                        android:background="@drawable/bg_spinner"
                        android:textSize="@dimen/text_12"
                        android:minHeight="0dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/icon_down_arrow"/>
            </RelativeLayout>


            <!--APBD-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/bg_summary"
                    android:layout_marginTop="@dimen/space_x1_half"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                    <TextView
                            android:id="@+id/txt_graph_apbd"
                            android:layout_width="125dp"
                            android:layout_height="50dp"
                            android:text="Data Penyerapan Anggaran APBD"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_12"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginHorizontal="32dp"/>
                    <TextView
                            android:id="@+id/txt_total_apbd"
                            android:layout_width="125dp"
                            android:layout_height="50dp"
                            android:text="Total Anggaran Belanja APBD"
                            android:textSize="@dimen/text_12"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginHorizontal="32dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/graph_apbd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <!--Pendapatan Desa-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/bg_summary"
                    android:layout_marginTop="@dimen/space_x1_half"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                    <TextView
                            android:id="@+id/txt_graph_pendapatan_desa"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="Data Pendapatan Desa"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_12"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginHorizontal="32dp"/>
                    <TextView
                            android:id="@+id/txt_total_pendapatan_desa"
                            android:layout_width="125dp"
                            android:layout_height="50dp"
                            android:text="Total Pendapatan Desa"
                            android:textSize="@dimen/text_12"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginHorizontal="32dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/graph_pendapatan_desa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <!--Pembiayaan Desa-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/bg_summary"
                    android:layout_marginTop="@dimen/space_x1_half"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                    <TextView
                            android:id="@+id/txt_graph_pembiayaan_desa"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="Data Pembiayaan Desa"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_12"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginHorizontal="32dp"/>
                    <TextView
                            android:id="@+id/txt_total_pembiayaan_desa"
                            android:layout_width="125dp"
                            android:layout_height="50dp"
                            android:text="Total Pembiayaan Desa"
                            android:textSize="@dimen/text_12"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginHorizontal="32dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/graph_pembiayaan_desa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <!--        <com.google.android.material.bottomnavigation.BottomNavigationView-->
        <!--                android:id="@+id/bottom_navigation"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_alignParentBottom="true"-->
        <!--                app:itemBackground="@color/white"-->
        <!--                app:menu="@menu/main_bottom_navigation"-->
